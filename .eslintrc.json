{
  "extends": [
    "next/core-web-vitals"
    // "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2
      }
    ],
    "unused-imports/no-unused-imports": "error", // show unused imports as errors
    "unused-imports/no-unused-vars": [
      "warn",
      { "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
    ]
  }
}
